<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Spinner
            android:id="@+id/spinner1"
            android:layout_width="144dp"
            android:layout_height="44dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="56dp"
            android:background="@android:drawable/spinner_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
            android:id="@+id/spinner2"
            android:layout_width="144dp"
            android:layout_height="44dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="140dp"
            android:background="@android:drawable/spinner_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="86dp"
            android:layout_height="47dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="60dp"
            android:text="@string/str_txt1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Start:"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="86dp"
            android:layout_height="47dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="144dp"
            android:text="@string/str_txt2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Goal:"/>

    <Button
            android:id="@+id/search_button"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="228dp"
            android:text="@string/str_btn1"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/route_button"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="228dp"
            android:text="@string/str_btn2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="BIKE SEARCH"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:id="@+id/bike_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:layout_marginTop="304dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="PAYMENT"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:id="@+id/pay_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="200dp"
            android:layout_marginTop="304dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>